{
    "name": "list-paths",
    "version": "1.0.0",
    "description": "Fetch all paths in the working directory.",
    "main": "listPaths.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "lint": "npx eslint src/*.ts --fix",
        "lint-tests": "npx eslint src/tests/*.test.ts --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "test-cov": "jest --coverage",
        "mutate": "stryker run",
        "compile": "tsc --build tsconfig-build.json"
    },
    "eslintConfig": {
        "env": {
            "commonjs": true,
            "es2020": true,
            "node": true,
            "jest": true
        },
        "extends": [
            "standard"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 11
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "indent": [
                "error",
                4
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MeanBoyCousin/list-paths.git"
    },
    "keywords": [
        "list",
        "paths",
        "paths",
        "folders",
        "files",
        "dir",
        "directory",
        "node"
    ],
    "author": "Tim Dunphy",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/MeanBoyCousin/list-paths/issues"
    },
    "homepage": "https://github.com/MeanBoyCousin/list-paths#readme",
    "devDependencies": {
        "@stryker-mutator/core": "^3.3.1",
        "@stryker-mutator/jest-runner": "^3.3.1",
        "@stryker-mutator/typescript": "^3.3.1",
        "@types/jest": "^26.0.7",
        "@types/node": "^14.0.27",
        "@typescript-eslint/eslint-plugin": "^3.7.1",
        "@typescript-eslint/parser": "^3.7.1",
        "eslint": "^7.5.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "jest": "^26.2.1",
        "mock-fs": "^4.12.0",
        "ts-jest": "^26.1.4",
        "typescript": "^3.9.7"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "dependencies": {
        "@types/mock-fs": "^4.10.0"
    }
}
